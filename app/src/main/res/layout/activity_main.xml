<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sufin.calculator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="70sp"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorPrimaryDark" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/TV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TV"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:text="MC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/BotonMc" />

            <Button
                android:text="MR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/BotonMr" />

            <Button
                android:text="M+"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/BotonMmas" />

            <Button
                android:text="M-"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/BotonMmenos"/>

            <Button
                android:text="MS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/BotonMs" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Boton7"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:text="8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Boton8"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:text="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Boton9"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:text="/"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Bdividir"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Boton4"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:text="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Boton5"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:text="6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Boton6"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:text="*"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Bmulti"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Boton1"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:text="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Boton2"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:text="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Boton3"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:text="-"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Brestar"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="C"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Bborrar"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Boton0"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:text="."
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Bpunto"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:text="+"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Bsumar"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="="
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Bresultado"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="onClick"
                android:background="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
