<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sufin.calculator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/darker_gray"
        android:textSize="80sp"
        android:elevation="1dp"
        android:minHeight="47dp"
        android:backgroundTint="@android:color/background_dark"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_orange_dark"
        android:textDirection="rtl"
        android:autoText="false" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*"
        android:id="@+id/tableLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TV">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button4" />

            <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button3" />

            <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button2" />

            <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:text="7"
                android:id="@+id/Boton7"
                android:layout_column="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:textSize="25sp"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/background_light"
                android:minWidth="50dp"
                android:minHeight="50dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/Boton8"
                android:layout_column="1"
                android:onClick="onClick"
                android:textSize="25sp"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/background_light"
                android:minWidth="50dp"
                android:minHeight="50dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/Boton9"
                android:layout_column="2"
                android:onClick="onClick"
                android:textSize="25sp"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/background_light"
                android:minWidth="50dp"
                android:minHeight="50dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/Bdividir"
                android:layout_column="3"
                android:onClick="onClick"
                android:background="@android:color/holo_orange_dark"
                android:textSize="25sp"
                android:minWidth="50dp"
                android:minHeight="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/Boton4"
                android:onClick="onClick"
                android:textSize="25sp"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/background_light"
                android:minWidth="50dp"
                android:minHeight="50dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/Boton5"
                android:onClick="onClick"
                android:textSize="25sp"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/background_light"
                android:minWidth="50dp"
                android:minHeight="50dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/Boton6"
                android:onClick="onClick"
                android:textSize="25sp"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/background_light"
                android:minWidth="50dp"
                android:minHeight="50dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="*"
                android:id="@+id/Bmulti"
                android:onClick="onClick"
                android:background="@android:color/holo_orange_dark"
                android:textSize="25sp"
                android:minWidth="50dp"
                android:minHeight="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:text="1"
                android:id="@+id/Boton1"
                android:layout_column="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:textSize="25sp"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/background_light"
                android:minWidth="50dp"
                android:minHeight="50dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/Boton2"
                android:layout_column="1"
                android:onClick="onClick"
                android:textSize="25sp"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/background_light"
                android:minWidth="50dp"
                android:minHeight="50dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/Boton3"
                android:layout_column="2"
                android:onClick="onClick"
                android:textSize="25sp"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/background_light"
                android:minWidth="50dp"
                android:minHeight="50dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/Brestar"
                android:layout_column="3"
                android:onClick="onClick"
                android:background="@android:color/holo_orange_dark"
                android:textSize="25sp"
                android:minWidth="50dp"
                android:minHeight="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:text="C"
                android:id="@+id/Bborrar"
                android:layout_column="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/background_dark"
                android:onClick="onClick"
                android:background="@android:color/holo_orange_dark"
                android:textSize="25sp"
                android:minWidth="50dp"
                android:minHeight="50dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/Boton0"
                android:layout_column="1"
                android:onClick="onClick"
                android:textSize="25sp"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/background_light"
                android:minWidth="50dp"
                android:minHeight="50dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/Bpunto"
                android:layout_column="2"
                android:onClick="onClick"
                android:background="@android:color/holo_orange_dark"
                android:textSize="25sp"
                android:textColor="@android:color/background_dark"
                android:minWidth="50dp"
                android:minHeight="50dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/Bsumar"
                android:layout_column="3"
                android:onClick="onClick"
                android:background="@android:color/holo_orange_dark"
                android:textSize="25sp"
                android:minWidth="50dp"
                android:minHeight="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:id="@+id/Bresultado"
                android:layout_column="0"
                android:layout_span="4"
                android:onClick="onClick"
                android:background="@android:color/holo_orange_dark"
                android:textSize="25sp"
                android:textColor="@android:color/background_dark"
                android:minWidth="50dp"
                android:minHeight="50dp" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
